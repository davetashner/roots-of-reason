{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resource",
  "description": "Harvestable resource definition",
  "type": "object",
  "required": ["resource_type", "total_yield", "color"],
  "properties": {
    "resource_type": { "type": "string" },
    "total_yield": { "type": "number", "minimum": 0 },
    "color": {
      "type": "array",
      "items": { "type": "number" },
      "minItems": 3,
      "maxItems": 3
    },
    "regenerates": { "type": "boolean" },
    "regen_rate": { "type": "number", "minimum": 0 },
    "regen_delay": { "type": "number", "minimum": 0 }
  },
  "additionalProperties": false
}
