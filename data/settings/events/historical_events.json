        "has_market_count_2_plus": {
          "description": "Renaissance merchant class",
          "extra_gold_bonus": 0.15
        }
      },
      "affects_all_players": false,
      "visual": "golden_particle_glow_over_libraries_and_markets",
      "audio": "renaissance_fanfare_with_lute",
      "announcement": "A Renaissance dawns! Knowledge and commerce flourish.",
      "flavor_text": "From the ashes of plague and war, a rebirth of learning. The world will never be the same."
    }
